{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "build",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
