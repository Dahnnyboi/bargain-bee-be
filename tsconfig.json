{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "build",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "index.ts", ".eslintrc.cjs"],
  "exclude": ["node_modules/**", "build/**"]
}
